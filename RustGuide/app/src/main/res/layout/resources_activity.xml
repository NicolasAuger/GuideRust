<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#2a2a2a"
    android:animateLayoutChanges="true">
    <!--android:transitionGroup="true"-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- Titre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ressources_title"
                android:id="@+id/ressources_title"
                android:padding="10dp"
                android:textColor="#dc5555"
                android:textSize="18dp"
                android:background="#252525"
                android:textAlignment="center"
                android:layout_marginBottom="10dp" />

            <!-- Wood -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/woodPl"
                android:src="@drawable/wood_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/woodGl"
                android:src="@drawable/wood_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Stones -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stonesPl"
                android:src="@drawable/stone_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stonesGl"
                android:src="@drawable/stones_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Metal -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/metalPl"
                android:src="@drawable/metal_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/metalGl"
                android:src="@drawable/metal_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Metal Fondu -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/metalfPl"
                android:src="@drawable/metalf_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/metalfGl"
                android:src="@drawable/metalf_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Souffre -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sulfurePl"
                android:src="@drawable/sulfure_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sulfureGl"
                android:src="@drawable/sulfure_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Souffre fondu -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sulfurefPl"
                android:src="@drawable/sulfurf_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sulfurefGl"
                android:src="@drawable/sulfurf_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Tissu -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clothPl"
                android:src="@drawable/cloth_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clothGl"
                android:src="@drawable/cloth_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Cuir -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/leatherPl"
                android:src="@drawable/leather_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/leatherGl"
                android:src="@drawable/leather_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Graisse -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fatPl"
                android:src="@drawable/fat_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fatGl"
                android:src="@drawable/fat_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />

            <!-- Os -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bonePl"
                android:src="@drawable/bone_pl"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/boneGl"
                android:src="@drawable/bone_gl"
                android:adjustViewBounds="true"
                android:visibility="gone" />



        </LinearLayout>
    </ScrollView>

</LinearLayout>